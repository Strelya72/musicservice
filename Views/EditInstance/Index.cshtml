@model EditInstanceViewModel

<div class="row" style="">

    <div class="col-4" style="display: inline-grid;">
    </div>

    <div class="col-4" style="display: inline-grid; padding-bottom: 20px;">
        <a asp-controller="Home" class="btn btn-primary">Вернуться</a>
    </div>

    <div class="col-4" style="display: inline-grid;">
    </div>
</div>

<div class="row">

    @foreach (MusicInstance item in Model.MusicInstances)
    {
        <div class="col-4" style="padding-bottom: 20px;">

            <form asp-action="UpdateInstance" method="post" class="form-horizontal"
                  style="text-align: center;background-color: white;padding: 30px 10px;border-radius: 5px;" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>

                <img src="@item.ImageUrl" alt="Alternate Text" style="width: 100px;" />
                <div class="form-group" style="display: none;">
                    <label asp-for="EditInstanceObj.Id">@item.Id</label>
                    <input class="form-control" value="@item.Id" type="number" asp-for="EditInstanceObj.Id" />
                </div>
                <div class="form-group">
                    <label asp-for="EditInstanceObj.Title"></label>
                    <input class="form-control" value="@item.Title"  minlength="5" type="text" asp-for="EditInstanceObj.Title" />
                    <span asp-validation-for="EditInstanceObj.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EditInstanceObj.Price"></label>
                    <input class="form-control" type="number" min="1" value="@item.Price" asp-for="EditInstanceObj.Price" />
                    <span asp-validation-for="EditInstanceObj.Price" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">Обновить</button>
            </form>
        </div>
    }
</div>

<script>shopPage()</script>